@using System.Globalization
@model WalletOne.Domain.Entities.Cart

<div id="cart">
    <span class="caption">
        <b>Your cart:</b>
        @Model.Lines.Sum(x => x.Quantity) item(s),
        @Model.ComputeTotalValue().ToString("c", CultureInfo.CreateSpecificCulture("ru-RU"))
    </span>
    @Html.ActionLink("Checkout", "Index", "Cart", new {
    returnUrl =
Request.Url.PathAndQuery
}, null)
</div>